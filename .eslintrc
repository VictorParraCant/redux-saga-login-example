{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "modules": true,
      "templateStrings": true,
      "spread" : true,
      "restParams" : true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": ["error", "double", "avoid-escape"],
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "semi": ["error", "always"],
    "no-console": "error"
  }
}
